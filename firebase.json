{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/sitemap.xml",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/xml; charset=UTF-8"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/phim/**",
        "destination": "/movie.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
